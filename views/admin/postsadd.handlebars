{{#each errors}}
<div class="alert alert-danger">{{this.errors}}</div>
{{else}}
{{/each}}

<h3>Novo post</h3>
<div class="card">
<div class="card-body">
<form action="/adm/post/new" method="POST" >
<label for="title" >Titulo</label>
<input type="text" id="title"  name="title" class="form-control">
<label for="slug"  >Slug</label>
<input type="text" name="slug" id="slug" class="form-control">
<label for="description">Descricao</label>
<input type="text" name="description" id="description" class="form-control">
<label for="content">Conteudo</label><br>
<textarea name="content"class="form-control" ></textarea>

<label for="category">Categoria</label>
<select name="category" class="custom-select">
    {{#each category}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{else}}
    <option value="0">nenhuma categoria</option>
    {{/each}}
</select>
<button class="btn btn-success mt-3" type="submit">Adicionar Post</button>
</form>
</div>
</div>